#!/bin/bash
# NOTE We use Feature Tool ( https://bitbucket.org/ogstudio/feature-tool )
# NOTE to generate different versions from the same source code

DIR=`dirname $0`

# List of examples.
EXAMPLES="
01.EmbedResource
02.TextureImage
03.RemoteDebugging
"

declare -A PLATFORMS
PLATFORMS["android"]="app/src/main/cpp"
PLATFORMS["desktop"]="src"
PLATFORMS["ios"]="src"
PLATFORMS["web"]="src"

processPlatformFeatures()
{
    PATH_TO_FEATURES_TXT=$1
    PATH_TO_FEATURES=$2
    echo "feature-tool $PATH_TO_FEATURES_TXT $PATH_TO_FEATURES"
    feature-tool $PATH_TO_FEATURES_TXT $PATH_TO_FEATURES
}

main()
{
    for example in $EXAMPLES; do
        echo "Generating example '$example'"
        for platform in "${!PLATFORMS[@]}"; do
            featuresPath=${PLATFORMS[$platform]}
            processPlatformFeatures $DIR/$example/$platform/$featuresPath/Features.txt $DIR/features
        done
    done
}

main

